<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#e92030"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="658dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/apaaja"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="117dp"
            android:layout_height="124dp"
            android:src="@drawable/login" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="LOGIN"
            android:textAlignment="center"
            android:textSize="50dp" />

        <EditText
            android:id="@+id/edtusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_npm"
            android:hint="USERNAME"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_password"
            android:hint=" PASSWORD"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="95dp"
            android:text="Show Password" />

        <LinearLayout
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82dp"
            android:layout_marginRight="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/customstroke"
                android:backgroundTint="#f81817"
                android:text="LOGIN"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Daftar Akun ? "
                android:textSize="22dp" />

            <Button
                android:id="@+id/btnlinkregis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="DAFTAR"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>